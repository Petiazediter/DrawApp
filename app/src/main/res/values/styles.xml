<resources>
    <!-- Base application theme. -->
    <style name="AppTheme"  parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="ShadowText">
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:shadowDy">10</item>
    </style>

    <style name="Base.TextAppearance.AppCompat.Button.CustomButton">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>

    <style name="OrangeButton" parent="Base.TextAppearance.AppCompat.Button.CustomButton">
        <item name="android:backgroundTint">@color/orangeDark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BlueButton" parent="Base.TextAppearance.AppCompat.Button.CustomButton">
        <item name="android:backgroundTint">@color/blueDark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="GreenButton" parent="Base.TextAppearance.AppCompat.Button.CustomButton">
        <item name="android:backgroundTint">@color/greenDark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="GrayButton" parent="Base.TextAppearance.AppCompat.Button.CustomButton">
        <item name="android:backgroundTint">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="RedButton" parent="Base.TextAppearance.AppCompat.Button.CustomButton">
        <item name="android:backgroundTint">@color/redDark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:background">@drawable/edit_bg</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textColorHint">@color/secondaryTextColor</item>
        <item name="android:drawableTint">@color/secondaryTextColor</item>
</style>
</resources>