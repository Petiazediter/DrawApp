<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lobby_fragment.LobbyFragment">

    <include
        layout="@layout/background_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        layout="@layout/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/friendsRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@id/startGame"
        app:layout_constraintTop_toBottomOf="@id/current_players"
        tools:visibility="visible" />

    <Button
        android:id="@+id/startGame"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="40dp"
        android:background="@drawable/ic_playbutton"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lobby_details_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/lobby_details_tv"
        style="@style/MenuH1Style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lobby_details"
        android:textSize="45sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/details_grid"
        app:layout_constraintLeft_toLeftOf="@id/details_grid"
        tools:visibility="visible" />

    <GridLayout
        android:id="@+id/details_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="60dp"
        android:columnCount="2"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            style="@style/MenuH1Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/code"
            android:textColor="@color/secondaryTextColor"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/room_code"
            style="@style/MenuH1Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"

            android:text="@string/qwzefmp"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            style="@style/MenuH1Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/players"
            android:textColor="@color/secondaryTextColor"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/current_players"
            style="@style/MenuH1Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="end"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"

            android:text="@string/_0_6"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>