<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".join_game_fragment.JoinGameFragment">

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        layout="@layout/background_layout"/>



    <EditText
        android:id="@+id/code_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/CustomEditText"
        android:hint="Code"
        android:textColor="@color/mainTextColor"
        android:drawablePadding="-50dp"
        android:drawableStart="@drawable/ic_baseline_code_24"
        android:drawableTint="@color/secondaryTextColor"
        android:gravity="center"
        android:textSize="36sp"
        android:fontFamily="@font/roboto_bold"
        android:padding="5dp"
        android:layout_marginHorizontal="80dp"/>

    <Button
        android:id="@+id/submit_code"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="@id/code_edit"
        app:layout_constraintTop_toBottomOf="@id/code_edit"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_playbutton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Code:"
        app:layout_constraintLeft_toLeftOf="@id/code_edit"
        app:layout_constraintBottom_toTopOf="@id/code_edit"
        style="@style/MenuH2Style"
        android:textSize="42sp"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginBottom="30dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>