<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".join_game_fragment.JoinGameFragment">

    <include
        layout="@layout/background_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/code_edit"
        style="@style/CustomEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="80dp"
        android:drawableStart="@drawable/ic_code"
        android:drawableTint="@color/secondaryTextColor"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:hint="CODE"
        android:inputType="text"
        android:maxLength="6"
        android:padding="5dp"
        android:textColor="@color/mainTextColor"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/submit_code"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_playbutton"
        app:layout_constraintRight_toRightOf="@id/code_edit"
        app:layout_constraintTop_toBottomOf="@id/code_edit" />

    <TextView
        style="@style/MenuH2Style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Code:"
        android:textSize="42sp"
        app:layout_constraintBottom_toTopOf="@id/code_edit"
        app:layout_constraintLeft_toLeftOf="@id/code_edit" />

</androidx.constraintlayout.widget.ConstraintLayout>