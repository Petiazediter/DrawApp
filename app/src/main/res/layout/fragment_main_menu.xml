<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:context=".main_page_fragment.MainMenuFragment">

    <include
        layout="@layout/background_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/log_out_button"
        android:layout_margin="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_smallbtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:outlineProvider="bounds"/>

    <ImageView
        android:src="@drawable/ic_logout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        android:layout_margin="10dp"
        app:tint="@color/mainTextColor"
        android:outlineProvider="bounds"
        app:layout_constraintTop_toTopOf="@id/log_out_button"
        app:layout_constraintBottom_toBottomOf="@id/log_out_button"
        app:layout_constraintLeft_toLeftOf="@id/log_out_button"
        app:layout_constraintRight_toRightOf="@id/log_out_button"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect with your\nFriends!"
            style="@style/MenuH1Style"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You can easily add new friends and enjoy the game with them! Invite them or join to to them, its super easy!"
            style="@style/MenuH2Style"/>

        <Button
            android:layout_marginTop="25dp"
            android:id="@+id/friends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/GradientButton"
            android:text="Friends"/>

        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play the game!"
            style="@style/MenuH1Style"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are one tap away from playing. What are you waiting for?"
            style="@style/MenuH2Style"/>

        <Button
            android:id="@+id/create_game"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/GradientButton"
            android:text="Host game"/>

        <Button
            android:id="@+id/join_game_button"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/GradientButton"
            android:text="Join Game"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>