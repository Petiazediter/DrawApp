<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ic_svg_bg"
    tools:context=".friend_invites.InvitesFragment">

    <EditText
        android:id="@+id/add_friend_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/add_friend_btn"
        app:layout_constraintRight_toLeftOf="@id/add_friend_btn"
        app:layout_constraintBottom_toBottomOf="@id/add_friend_btn"
        style="@style/CustomEditText"
        android:hint="@string/name"
        android:inputType="text"
        android:layout_margin="30dp"/>

    <Button
        android:id="@+id/add_friend_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/GreenButton"
        android:text="@string/add_friend"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="30dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_invites_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintTop_toBottomOf="@id/add_friend_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>