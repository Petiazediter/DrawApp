<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game_view.fragments.guess_section.GuessingFragment">

    <include
        layout="@layout/background_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/mainTextColor"
        android:textSize="27sp"
        android:textAllCaps="true"
        android:shadowDx="1dp"
        android:shadowDy="6dp"
        android:shadowRadius="20dp"
        android:shadowColor="@android:color/black"
        tools:text="username"/>

    <ImageView
        android:id="@+id/drawing_iv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@id/guess_label"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:background="@color/mainTextColor"
        android:layout_margin="50dp"
        android:elevation="10dp"
        />

    <TextView
        android:id="@+id/guess_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/guess_et"
        app:layout_constraintBottom_toTopOf="@id/guess_et"
        app:layout_constraintWidth_percent=".7"
        android:text="Your Guess:"
        android:textAllCaps="true"
        android:textColor="@color/mainTextColor"
        android:fontFamily="@font/roboto_bold"
        android:textSize="28sp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/guess_et"
        style="@style/CustomEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="70dp"
        android:background="@color/colorPrimaryDarkX"
        android:fontFamily="@font/roboto_regular"
        android:hint="Your Guess"
        android:textColor="@color/mainTextColor"
        android:textColorHint="@color/secondaryTextColor"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent=".7" />

    <ImageView
        android:id="@+id/ok_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_playbutton"
        app:layout_constraintBottom_toTopOf="@id/guess_et"
        app:layout_constraintTop_toBottomOf="@id/guess_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/guess_et"
        app:layout_constrainedWidth="true"
        android:padding="10dp"
        android:layout_margin="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>