<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    tools:context=".register_fragment.RegisterFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="32dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:orientation="vertical"
            app:layout_constraintRight_toRightOf="parent">

            <EditText
                android:backgroundTint="@color/backgroundColor"
                android:layout_marginVertical="10dp"
                android:id="@+id/username"
                android:background="@drawable/edit_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/username"
                android:inputType="text"
                style="@style/CustomEditText"
                android:drawableStart="@drawable/ic_baseline_person_24" />

            <EditText
                android:backgroundTint="@color/backgroundColor"
                android:layout_marginVertical="10dp"
                android:id="@+id/password"
                android:background="@drawable/edit_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                style="@style/CustomEditText"/>

            <EditText
                android:backgroundTint="@color/backgroundColor"

                android:layout_marginVertical="10dp"
                android:id="@+id/password2"
                android:background="@drawable/edit_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password_x2"
                android:inputType="textPassword"
                style="@style/CustomEditText"
                android:drawableStart="@drawable/ic_baseline_lock_24" />

            <EditText
                android:backgroundTint="@color/backgroundColor"
                android:layout_marginVertical="10dp"
                android:id="@+id/email"
                android:background="@drawable/edit_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                style="@style/CustomEditText"/>

            <Button
                android:id="@+id/sign_up_button"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:textSize="19sp"
                android:layout_height="wrap_content"
                android:text="@string/sign_up"
                android:drawableStart="@drawable/ic_baseline_add_24"
                android:padding="10dp"
                android:paddingEnd="20dp"
                android:drawableTint="@android:color/white"
                style="@style/BlueButton"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/waves"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_waves"
        app:layout_constraintBottom_toTopOf="@id/sign_in_button_layout"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:id="@+id/sign_in_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#0099FF"
        app:layout_constraintRight_toRightOf="parent">
    <TextView
        android:padding="20dp"
        android:id="@+id/sign_in_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="16sp"
        android:text="@string/i_already_have_an_account"/>
    </LinearLayout>

    <include
        layout="@layout/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>