<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/loadingFragment">

    <fragment
        android:id="@+id/loadingFragment"
        android:name="com.codecool.drawapp.loading_fragment.LoadingFragment"
        android:label="fragment_loading"
        tools:layout="@layout/fragment_loading" >
        <action
            android:id="@+id/action_loadingFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loadingFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loadingFragment_to_mainMenuFragment"
            app:destination="@id/mainMenuFragment"
            app:popUpTo="@id/loadingFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.codecool.drawapp.login_fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_loadingFragment"
            app:destination="@id/loadingFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.codecool.drawapp.register_fragment.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registerFragment_to_loadingFragment"
            app:destination="@id/loadingFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/mainMenuFragment"
        android:name="com.codecool.drawapp.main_page_fragment.MainMenuFragment"
        android:label="fragment_main_menu"
        tools:layout="@layout/fragment_main_menu" >
        <action
            android:id="@+id/action_mainMenuFragment_to_loadingFragment"
            app:destination="@id/loadingFragment"
            app:popUpTo="@id/mainMenuFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_mainMenuFragment_to_friendsFragment"
            app:destination="@id/friendsFragment" />
        <action
            android:id="@+id/action_mainMenuFragment_to_lobbyFragment"
            app:destination="@id/lobbyFragment" />
        <action
            android:id="@+id/action_mainMenuFragment_to_joinGameFragment"
            app:destination="@id/joinGameFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/friendsFragment"
        android:name="com.codecool.drawapp.friends_fragment.FriendsFragment"
        android:label="fragment_friends"
        tools:layout="@layout/fragment_friends" >
        <action
            android:id="@+id/action_friendsFragment_to_invitesFragment"
            app:destination="@id/invitesFragment" />
    </fragment>
    <fragment
        android:id="@+id/invitesFragment"
        android:name="com.codecool.drawapp.friend_invites.InvitesFragment"
        android:label="fragment_invites"
        tools:layout="@layout/fragment_invites" />
    <fragment
        android:id="@+id/lobbyFragment"
        android:name="com.codecool.drawapp.lobby_fragment.LobbyFragment"
        android:label="fragment_lobby"
        tools:layout="@layout/fragment_lobby" >

        <action
            android:id="@+id/action_lobbyFragment_to_mainMenuFragment"
            app:destination="@id/mainMenuFragment"
            app:popUpTo="@id/lobbyFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_lobbyFragment_to_gameView"
            app:destination="@id/gameView"
            app:popUpTo="@id/lobbyFragment"
            app:popUpToInclusive="true" />

    </fragment>
    <fragment
        android:id="@+id/joinGameFragment"
        android:name="com.codecool.drawapp.join_game_fragment.JoinGameFragment"
        android:label="fragment_join_game"
        tools:layout="@layout/fragment_join_game" >
        <action
            android:id="@+id/action_joinGameFragment_to_lobbyFragment"
            app:destination="@id/lobbyFragment"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popUpTo="@id/joinGameFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_joinGameFragment_to_mainMenuFragment"
            app:destination="@id/mainMenuFragment"
            app:popUpTo="@id/joinGameFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/gameView"
        android:name="com.codecool.drawapp.game_view.GameView"
        android:label="fragment_game_view"
        tools:layout="@layout/fragment_game_view" />
</navigation>